 <script type="text/javascript">

     $('#buy_bitcoin').validate({
          onfocusout: function(element) {
                this.element(element);
                 $('#bt_sub_btn').show();
            },
            errorClass: 'error_validate',
            errorElement:'span',
            highlight: function(element, errorClass) {
               $(element).removeClass(errorClass);
                $('#bt_sub_btn').show();
            }
    });
  
  $('#bt_sub_btn').click(function(){
    $('#bt_sub_btn').hide();
  });

  $('#image').change(function(){
    check_image=$('#image').val();
    if(check_image !="")
    {
      var ext = $('#image').val().split('.').pop().toLowerCase();
        if($.inArray(ext, ['gif','png','jpg','jpeg']) == -1) {
          $('#image_val_err').css({'color':'red'});
          $('#image_val_err').html("");
          $('#image_val_err').html("Please selet image file only.");
          $('#image').val("");
        }else{
          $('#image_val_err').css({'color':'green'});
          $('#image_val_err').html(check_image);
        }
      
      

    }
  });
  </script>

   <script type="text/javascript">

     function multiply(){
         var rowan=$('#rowan').val();
         var rate = $('#rate_per_rowan').val();
         // alert(rowan);

          if(rowan!="" )  
         {
          var btc_round= parseFloat(rowan)*rate ;
          // alert(btc_round);
          var btc=btc_round.toFixed(7);
          $('#btc').val(btc);
         }
        
     };

  </script>

