        <script type="text/javascript">


        $('#buy_bitcoin').validate({
                onfocusout: function(element) {
                        this.element(element);
                        $('#bt_sub_btn').show();
                    },
                    errorClass: 'error_validate_btc',
                    errorElement:'span',
                    highlight: function(element, errorClass) {
                    $(element).removeClass(errorClass);
                        $('#bt_sub_btn').show();
                    }
            });

            $('#ethereum').validate({
            onfocusout: function(element) {
                this.element(element);
                 $('#et_sub_btn').show();
            },
            errorClass: 'error_validate_eth',
            errorElement:'span',
            highlight: function(element, errorClass) {
               $(element).removeClass(errorClass);
            }
            });

            $('select').on('change', function() {
                let value = this.value;
                if(value == 'Ethereum'){
                    $('#copy_add').hide();
                    $('#copy_add2').show();
                    $('#divBTC').hide();
                    $('#divETH').show();
                    $('#bitcoin_img').hide();
                    $('#ethereum_img').show();
                    $('#btc_list').hide();
                    $('#eth_list').show();
                }
                else{
                    $('#copy_add').show();
                    $('#copy_add2').hide();
                    $('#divETH').hide();
                    $('#divBTC').show();
                    $('#bitcoin_img').show();
                    $('#ethereum_img').hide();
                    $('#btc_list').show();
                    $('#eth_list').hide();
                }
            });

            function multiply() {
                var rowan = $('#artw').val();
                var rate = $('#rate_per_artw').val();
                //alert(rowan);
                //alert(rate);

                if (rowan != "") {
                    var btc_round = parseFloat(rowan) * rate;
                    //alert(btc_round);
                    var btc = btc_round.toFixed(7);
                    $('#btcv').val(btc);
                }

            };

            function multiplyeth() {
                var rowan = $('#artweth').val();
                var rate = $('#rate_per_artweth').val();
                //alert(rowan);
                //alert(rate);

                if (rowan != "") {
                    var btc_round = parseFloat(rowan) * rate;
                    //alert(btc_round);
                    var btc = btc_round.toFixed(7);
                    $('#ethv').val(btc);
                }

            };

        </script>
