<script>
  function check(input) {
    var balance = $('#t_balance').val();
    var usdValue = $('#usdValueRwn').val();
     $('#errorMsg').html("");
     $('#valueinUSD').val("");
    
    if (input.value > 0) {
      if(input.value>parseFloat(balance)){
      $('#errorMsg').html("");
      $('#valueinUSD').val("");
      $('#errorMsg').html('The amount deposited must be less than your ARTW balance.');
     }else{
       if(input.value < 6000){
        $('#errorMsg').html("");
        $('#valueinUSD').val("");
        $('#errorMsg').html('The amount deposited must be atleast 6000 ARTW.');
       }else{
        var total_val = parseFloat(input.value)*parseFloat(usdValue);
        $('#errorMsg').html("");
        $('#valueinUSD').val(total_val);
       }
       
     }
    
    } else {
      $('#errorMsg').html("");
     $('#valueinUSD').val("");
    $('#errorMsg').html('The amount deposited must be greater than zero.');
      
    }
  }
 
 function deposit_rwn(){
  var deposit = $('#deposit').val();
  var endate = $('#txtDate').val();
  if(deposit!=""){
    
    if(endate){
      // alert(endate);
      $('#errorMsg').html("");
      $('#dateerrorMsg').html("");

      $('#amount_send').val(deposit);
      $('#endate').val(endate);

      $('#depo_btn').attr('data-target','#keyModal');
      $('#keyModal').modal("show");
    }else{
      // alert(endate+"empty");
      $('#errorMsg').html("");
      $('#dateerrorMsg').html("");
      $('#dateerrorMsg').html("Please select end date.");
    }
  }else{
    // alert(deposit);
    $('#errorMsg').html("");
    $('#dateerrorMsg').html("");
    $('#errorMsg').html("Please enter deposit amount.");
  }
 } 

</script>  

