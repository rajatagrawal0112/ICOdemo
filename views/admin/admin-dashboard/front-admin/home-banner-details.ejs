<%- include('layout/header'); -%>
 <div class="heading-row mb-20">
    <div class="row align-item-center">
       <div class="col-lg-6">
          <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i class="mdi mdi-home"></i></span> Home Banner Details </h3>
       </div>
       <div class="col-lg-6">
       <!--   <div class="text-right">
           <div>
             <a href="add-new-banner" class="btn btn-common bg-gradient-primary">Add new Banner</a>
           </div>
         </div> -->
       </div>
  </div>
 
  </div>
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body table-responsive">
         <% if(success_msg!=undefined && success_msg !='' ){ %>
                                <div class="alert alert-success text-center  flash_msg ">
                                    <%= success_msg %>
                                </div>
                         <% }%>
                          <% if(err_msg!=undefined && err_msg!=''){ %>
                                <div class="alert alert-danger text-center  succ_flash_msg">
                                    <%= err_msg %>
                                </div>
                         <% }%>
          <table class="table">
            <thead>
              <tr>
                <th width="10%">S. No.</th>
                <th width="15%">Banner Image</th>
                <th width="15%">Banner Title</th>
                <th width="10%">Banner Content</th>
                <th width="10%">Status</th>
                <th width="10%">Action</th>
              </tr>
            </thead>
            <tbody>
              <% var i=1; if(BannerData.length>0){ %> 
              <% BannerData.forEach(function(BannerData){ %>
              <tr>
                <td><%= i %></td>
                <td>
                  <% if(BannerData.banner_image){ %>
                  <div class="normal-img">
                    <img src="/home/banner/<%= BannerData.banner_image%>">
                  </div>
                 <% }else{ %>--<%} %>
                </td>
                <td><%= BannerData.title %></td>
                
                <td><%= BannerData.content %></td>
                <td><%= BannerData.status %></td>
                 <td>
                  <div class="edit-icons">
                   
                    <a href="edit-banner?id=<%= BannerData._id %>" data-toggle="tooltip" data-placement="top" title="Edit"><i class="mdi mdi-pencil"></i></a>
                  <!--   <a href="delete-banner?id=<%= BannerData._id %>" data-toggle="tooltip" data-placement="top" title="Delete"><i class="mdi mdi-close"></i></a> -->
                  </div>
                </td>
              </tr>
               <% i++; }) %> 
              <% } %>

          
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

           
<%- include('layout/footer'); -%>
 <script>
$(document).ready( function () {
  $('.table').DataTable();
} );
</script>