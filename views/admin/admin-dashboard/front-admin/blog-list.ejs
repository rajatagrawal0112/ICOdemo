<%- include('layout/header'); -%>

    <div class="heading-row mb-20">
        <div class="row align-item-center">
            <div class="col-lg-6">
                <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i
                            class="mdi mdi-home"></i></span> Our Blogs </h3>
            </div>
            <div class="col-lg-6">
                <div class="text-right">
                    <div>
                        <a href="add-new-blog" class="btn btn-common bg-gradient-primary">Add new Blog</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="10%">S. No.</th>
                                <th width="10%">Blog Image</th>
                                <th width="10%">Blog Tittle</th>
                                <th width="30%">Content</th>
                                <th width="10%">Status</th>
                                <th width="10%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var i=1; if(blogdetails.length> 0){
                                blogdetails.forEach(function(blog){
                                %>
                                <tr>
                                    <td>
                                        <%- i %>
                                    </td>
                                    <td>
                                        <div class="normal-img">
                                            <img src="home/blog/<%= blog.blogimage%>">
                                        </div>
                                    </td>
                                    <td>
                                        <%-blog.title%>
                                    </td>
                                    <td>
                                        <%-blog.subheading%>
                                    </td>

                                    <td>
                                        <%-blog.status%>
                                    </td>
                                    <td>
                                        <div class="edit-icons">

                                            <a href="edit-blog?id=<%=blog._id%>" data-toggle="tooltip"
                                                data-placement="top" title="Edit"><i class="mdi mdi-pencil"></i></a>
                                            <a href="delete-blog?id=<%=blog._id%>" data-toggle="tooltip"
                                                data-placement="top" title="Delete"><i class="mdi mdi-close"></i></a>
                                        </div>
                                    </td>
                                    <% i++; }) } %>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer'); -%>

        <script>
            $(document).ready(function () {
                $('.table').DataTable();
            });
        </script>