<%- include('layout/header'); -%>

<style type="text/css">
  td {max-width: 150px !important;overflow: hidden !important}
</style>
  <div class="heading-row mb-20">
    <div class="row align-item-center">
       <div class="col-lg-6">
          <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i class="mdi mdi-phone"></i></span> Token History </h3>
       </div>
  </div>
  </div>
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body table-responsive">
          <table class="table">
                      <thead>
                        <tr>
                          <th> S.No. </th>
                          <th> Amount </th>
                          <th> From</th>
                          <th> To</th>
                          <th> Tx Hash</th>
                          <th>Tx Status </th>
                           <th>Bonus Reward</th>
                          <th> Referred To: Name </th>
                          <th>Referred To: email </th>
                          <th> Created At</th>
                        </tr>
                      </thead>
                      <tbody>
              <% var i=1; if(ether_data.length > 0){  
              ether_data.forEach(function(details){


              %>

              <tr>
                <td><%- i %></td>
                <td><%- details.amount %> <%- details.token_type %></td>
                <td><%- details.sender_wallet_address %></td>
                <td><%- details.receiver_wallet_address %></td>
                <td><%- details.hash %></td>
                <td><%- details.payment_status %></td>
                <td><% if(details.bonus_reward){ %>
                  <%- details.bonus_reward %>
                  <% }else{ %>
                  --
                  <% } %>
                </td>
                <td><% if(details.referred_to_name){ %>
                  <%- details.referred_to_name %>
                  <% }else{ %>
                  --
                  <% } %>
                </td>
                <td><% if(details.referred_to_email){ %>
                  <%- details.referred_to_email %>
                  <% }else{ %>
                  --
                  <% } %>
                </td>
                <td><%- details.created_at %></td>
             
        
                
                
              </tr>
             
                 <% i++; }) }  %>
              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
           
<%- include('layout/footer'); -%>
 <script>
$(document).ready( function () {
  $('.table').DataTable();
} );
</script>