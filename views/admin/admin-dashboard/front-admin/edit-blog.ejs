<%- include('layout/header'); -%>


    <div class="heading-row mb-20">
        <div class="row align-item-center">
            <div class="col-lg-6">
                <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i
                            class="mdi mdi-home"></i></span> Blog </h3>
            </div>
            <div class="col-lg-6">
                <div class="text-right">
                    <div>
                        <a href="main-dashboard" class="btn btn-common bg-gradient-primary">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <form action="/edit-blog?id=<%=blog._id%>" enctype="multipart/form-data" method="POST"
                            id="add_blog" class="forms-sample">

                            <div class="col-md-12">
                                <div>
                                    <div class="profile-form mt-20">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label>Tittle</label>
                                                            <input type="text" name='title' class="form-control"
                                                                value="<%=blog.title%>">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Blog Subheading</label>
                                                        <input type="text" name='subheading'
                                                            value='<%=blog.subheading%>' class=" form-control">
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Status</label>
                                                        <div class="box">
                                                            <select value='<%=blog.status%>' name='status'
                                                                class="form-control">
                                                                <option>active</option>
                                                                <option>inactive</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <p class="note"></p>
                                                        <div class="border-gray document-upload-box">
                                                            <div class="text-left">
                                                                <div class="uploader-img">
                                                                    <img id="user_profile_image_preview"
                                                                        src="assets/images/other/banner-dummy.jpg"
                                                                        class="m-t-5">
                                                                </div>
                                                                <div class="input-group mb-3 mb-3 verification">
                                                                    <input type="text" class="form-control" readonly=""
                                                                        id="text_img_name" data-rule-required="true"
                                                                        data-msg-required="Please select your Id."
                                                                        name="blog_image">
                                                                    <span class="input-group-btn">
                                                                        <span
                                                                            class="btn btn-common bg-gradient-primary btn-file1">
                                                                            Upload <input type="file" id="blog_image"
                                                                                value="" name="blog_image"
                                                                                accept="image/*"
                                                                                onchange="readURL(this);">
                                                                            <input type="hidden" name="old_image"
                                                                                value="<%= blog.blogimage%>">
                                                                        </span>
                                                                    </span>
                                                                    <!--  <button class="btn btn-common bg-gradient-primary ml-15">Remove</button> -->
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label>Content</label>
                                                            <textarea class="form-control"
                                                                name="editor1"><%=blog.content%></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">

                                            </div>
                                        </div>
                                        <div class="popup-btn">
                                            <button type="submit"
                                                class="btn btn-common bg-gradient-primary">Submit</button>
                                            <a href="/blog-list" class="btn btn-common bg-gradient-primary">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer'); -%>

        <script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>
        <script>
            CKEDITOR.replace('editor1');
        </script>

        <%- include('layout/footer'); -%>
            <script>
                $(document).ready(function () {
                    $('.table').DataTable();
                    var input = '<%= blog.blogimage%>';
                    var src = '/home/blog/' + input;

                    $('#user_profile_image_preview').attr('src', src);
                });
            </script>

            <script type="text/javascript">
                function readURL(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#user_profile_image_preview')
                                .attr('src', e.target.result)
                                .width(200)
                                .height(150);
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                    var src = $('#blogImage').val(); // "static/images/banner/blue.jpg"
                    var tarr = src.split('/');      // ["static","images","banner","blue.jpg"]
                    var file = tarr[tarr.length - 1]; // "blue.jpg"
                    var data = file.split('.')[0];  // "blue"

                    //alert(data);
                    $('#text_img_name').val(src);
                }

            </script>