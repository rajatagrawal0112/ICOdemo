<%- include('layout/header'); -%>
 
<div class="heading-row mb-20">
    <div class="row align-item-center">
       <div class="col-lg-6">
          <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i class="mdi mdi-home"></i></span> Edit Member </h3>
       </div>
        <div class="col-lg-6">
         <div class="text-right">
           <div>
             <a href="/our-team" class="btn btn-common bg-gradient-primary">Go Back</a>
           </div>
         </div>
       </div>
  </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
           <div class="card-body">
             <div class="row">
               <form action="/update_member" enctype="multipart/form-data" method="POST" id="update_member"  class="forms-sample">
               <div class="col-md-12">
                 <div>
                   <div class="profile-form mt-20">
                      <div class="row">
                        <div class="col-md-4">
                             <div class="form-group">
                                <label>Service Image(Size in Pixel 370*220)</label>
                                <p class="note"></p>
                                 <div class="border-gray document-upload-box">
                                       <div class="text-left">
                                          <div class="uploader-img">
                                            <img id="user_profile_image_preview" src="assets/images/other/banner-dummy.jpg" class="m-t-5" >
                                          </div>
                                           <div class="input-group mb-3 mb-3 verification">
                                              <input type="text" class="form-control" readonly="" id="text_img_name" data-rule-required="true" data-msg-required="Please select your Id.">
                                              <span class="input-group-btn">
                                                <span class="btn btn-common bg-gradient-primary btn-file1">
                                                Upload <input type="file" id="imgInp6" value="" name="member_image" accept="image/*" onchange="readURL(this);"  data-rule-required="true" data-msg-required="Please select image.">
                                                 <input type="hidden" name="old_image" value="<%= MemberDetail.member_image%>">
                                                 <input type="hidden" name="id" value="<%= MemberDetail._id%>">
                                                </span>   
                                              </span>
                                             <!--  <button class="btn btn-common bg-gradient-primary ml-15">Remove</button> -->
                                           </div>
                                       </div>
                                  </div>
                              </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                            
                              <div class="col-md-4">
                                 <div class="form-group">
                                    <label>Name</label>
                                     <input type="text" name="name" class="form-control" id="" placeholder="name" data-rule-required="true" data-msg-required="Please enter name." value="<%= MemberDetail.name%>">
                                  </div>
                              </div>
                              <div class="col-md-4">
                                 <div class="form-group">
                                    <label>Designation</label>
                                     <input type="text" name="designation" class="form-control" id="" placeholder="designation" data-rule-required="true" data-msg-required="Please enter designation." value="<%= MemberDetail.designation%>">
                                  </div>
                              </div>
                            
                              <div class="col-md-4">
                                <div class="form-group">
                                  <label>Status</label>
                                   <div class="box">
                                   <select class="form-control" name="status" data-rule-required="true" data-msg-required="Please select status."  >
                                      <option value="">Please select status</option>
                                      <option value="active" <% if(MemberDetail.status=='active'){ %>selected<% } %>>Active</option>
                                      <option value="inactive" <% if(MemberDetail.status=='inactive'){ %>selected<% } %>>Inactive</option>
                                    </select>
                                   </div>
                                </div>
                              </div>

                              <div class="col-md-12">
                                 <div class="form-group">
                                    <label>Linked In URL</label>
                                    <input type="text" name="linkedin_url" class="form-control" id="" placeholder="Linkedin Url" data-rule-required="true" data-msg-required="Please enter linkedin url." value="<%= MemberDetail.linkedin_url%>">
                                  </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                  <div class="form-group">
                                    <label>Service Content</label>
                                    <textarea class="form-control" name="content"><%= MemberDetail.content%></textarea>
                                  </div>
                              </div>
                            </div>
                            
                              
                        </div>
                       
                      </div>
                  
                      <div class="popup-btn text-center">
                        <button type="submit" class="btn btn-common bg-gradient-primary">Update</button>
                        <a href="/our-team" class="btn btn-common bg-gradient-primary">Cancel</a>
                      </div>
                      
               

                   </div>
                 </div>
               </div>
             </form>
             </div>
           </div>
        </div>
      </div>
    </div>

           
<%- include('layout/footer'); -%>
