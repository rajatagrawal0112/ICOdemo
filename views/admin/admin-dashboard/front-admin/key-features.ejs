<%- include('layout/header'); -%>

    <div class="heading-row mb-20">
        <div class="row align-item-center">
            <div class="col-lg-6">
                <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i
                            class="mdi mdi-home"></i></span>About Key Features </h3>
            </div>
            <div class="col-lg-6">
                <div class="text-right">
                    <div>
                        <a href="add-key-features" class="btn btn-common bg-gradient-primary">Add New Feature</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th width="10%">S. No.</th>
                                <th width="15%">Tittle</th>
                                <th width="30%">Content</th>
                                <th width="10%">Status</th>
                                <th width="10%">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var i=1; if(keyFeatures.length> 0){
                                keyFeatures.forEach(function(keyFeature){
                                %>
                                <tr>
                                    <td>
                                        <%- i %>
                                    </td>
                                    <td>
                                        <%-keyFeature.title%>
                                    </td>
                                    <td>
                                        <%-keyFeature.content%>
                                    </td>
                                    <td>
                                        <%-keyFeature.status%>
                                    </td>
                                    <td>
                                        <div class="edit-icons">

                                            <a href="edit-key-features?id=<%=keyFeature._id%>" data-toggle="tooltip"
                                                data-placement="top" title="Edit"><i class="mdi mdi-pencil"></i></a>
                                            <a href="" data-toggle="tooltip" data-placement="top" title="Delete"><i
                                                    class="mdi mdi-close"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <% i++; }) } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer'); -%>